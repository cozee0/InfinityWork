{
  "name": "spf-parse",
  "version": "1.0.4",
  "description": "Parse SPF (Sender Polify Framework) records",
  "main": "index.js",
  "scripts": {
    "test": "xo && ava",
    "report": "nyc ava && nyc report --reporter=html"
  },
  "files": [
    "index.js",
    "mechanisms.js",
    "mechanismerror.js",
    "prefixes.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softvu/spf-parse.git"
  },
  "keywords": [
    "spf",
    "email",
    "mail",
    "policy",
    "parse"
  ],
  "author": "Brian Hann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/softvu/spf-parse/issues"
  },
  "homepage": "https://github.com/softvu/spf-parse#readme",
  "devDependencies": {
    "ava": "^0.17.0",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "^1.2.0",
    "nyc": "^10.0.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "prefer-const": 0,
      "no-negated-condition": 0,
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "no-debugger": [
        "warn"
      ],
      "no-useless-call": 0
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "ipaddr.js": "^1.2.0",
    "lodash": "^4.17.3",
    "tldjs": "^1.7.0"
  }
}
